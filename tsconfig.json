{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/controllers.ts",
    "src/config.ts",
    "src/openAICompletion.ts",
    "src/errorHandler.ts",
    "src/router.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
